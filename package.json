{
  "name": "react-markdown-renderer",
  "version": "0.1.3",
  "description": "Simple React component that renders Markdown",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "start": "webpack-dev-server",
    "build": "npm run clean && babel src --out-dir dist",
    "build-pages": "npm run clean && NODE_ENV=production webpack --config ./webpack.production.config.js --progress --profile --colors",
    "lint": "eslint --ignore-path .gitignore .",
    "jest": "jest",
    "test": "npm run lint && npm run jest",
    "prepublish": "npm run build && npm test",
    "prepublish-pages": "npm run build-pages && npm test",
    "publish-pages": "gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://insidersbyte@github.com/InsidersByte/react-markdown-renderer.git"
  },
  "author": "Jonathon Kelly <jonathon.kelly@insidersbyte.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/InsidersByte/react-markdown-renderer/issues"
  },
  "homepage": "https://github.com/InsidersByte/react-markdown-renderer#readme",
  "peerDependencies": {
    "react": ">=0.14.7"
  },
  "dependencies": {
    "marked": "^0.3.5"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-jest": "^10.0.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "codeclimate-test-reporter": "^0.3.1",
    "copy-webpack-plugin": "^1.1.1",
    "coveralls": "^2.11.9",
    "css-loader": "^0.23.1",
    "eslint": "^2.6.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.2.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "gh-pages": "^0.11.0",
    "html-webpack-plugin": "^2.15.0",
    "jest-cli": "^0.10.0",
    "postcss-loader": "^0.8.2",
    "react": "^0.14.8",
    "react-addons-test-utils": "^0.14.8",
    "react-dom": "^0.14.8",
    "react-textarea-autosize": "^3.3.1",
    "rimraf": "^2.5.2",
    "stats-webpack-plugin": "^0.3.1",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.2",
    "stylus-loader": "^2.0.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "jest": {
    "collectCoverage": "true",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils"
    ]
  }
}
