{
  "name": "react-markdown-renderer",
  "version": "1.2.0",
  "description": "Simple React component that renders Markdown",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "keywords": [
    "react-component",
    "markdown",
    "react",
    "remarkable",
    "preview",
    "view",
    "render",
    "renderer",
    "md"
  ],
  "scripts": {
    "start": "webpack-dev-server",
    "build": "npm run build:clean && npm run build:dist && npm run build:flow",
    "build:clean": "rimraf dist",
    "build:dist": "babel src --out-dir dist",
    "build:flow": "flow-copy-source src dist",
    "build-pages": "npm run build-pages:clean && npm run build-pages:dist",
    "build-pages:clean": "rimraf dist",
    "build-pages:dist": "NODE_ENV=production webpack --config ./webpack.production.config.js --progress --profile --colors",
    "test": "npm run lint && npm run flow-check && npm run jest",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx .",
    "flow": "flow",
    "flow-check": "flow check",
    "jest": "jest",
    "prepublish": "npm run build && npm test",
    "prepublish-pages": "npm run build-pages && npm test",
    "publish-pages": "gh-pages -d dist",
    "np": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://insidersbyte@github.com/InsidersByte/react-markdown-renderer.git"
  },
  "author": "Jonathon Kelly <jonathon.kelly@insidersbyte.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/InsidersByte/react-markdown-renderer/issues"
  },
  "homepage": "https://github.com/InsidersByte/react-markdown-renderer#readme",
  "peerDependencies": {
    "react": ">=0.14.7"
  },
  "dependencies": {
    "remarkable": "^1.6.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^17.0.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-flow-react-proptypes": "^0.18.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2016": "^6.16.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-1": "^6.16.0",
    "codeclimate-test-reporter": "^0.4.0",
    "coveralls": "^2.11.9",
    "css-loader": "^0.26.1",
    "enzyme": "^2.5.1",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "flow-bin": "^0.36.0",
    "flow-copy-source": "1.1.0",
    "gh-pages": "^0.12.0",
    "html-webpack-plugin": "^2.17.0",
    "jest-cli": "^17.0.3",
    "np": "^2.9.0",
    "postcss-loader": "^1.0.0",
    "react": "^15.0.2",
    "react-addons-test-utils": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-textarea-autosize": "^4.0.1",
    "rimraf": "^2.5.2",
    "stats-webpack-plugin": "^0.4.2",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.0.0",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "jest": {
    "collectCoverage": "true",
    "automock": "true",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils",
      "<rootDir>/node_modules/enzyme"
    ]
  }
}
